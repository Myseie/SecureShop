@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>


    <h2>Användar Lista</h2>


    <table class="table">
        <thead>
            <tr>
               
                <th>Email</th>
                <th>Roll</th>
                <th>RollHantering</th>
            </tr>
        </thead>
        <tbody>
        @foreach(var user in Model)
        {
            <tr>
                
                <td>@user.Email</td>
                <td>
                    @if (ViewBag.UserRoles[user.Id] != null)
                    {
                        @string.Join(",", ViewBag.UserRoles[user.Id])
                    }
                </td>
                <td>
                    <a asp-action="ManageRoles" asp-route-userId="@user.Id" class="btn btn-primary">Hantera roller</a>
                </td>
            </tr>
        }
        </tbody>
    </table>